<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TaskC_IncidentMAUI.ViewModels"
             x:Class="TaskC_IncidentMAUI.Views.IncidentFormPage"
             x:DataType="viewmodels:IncidentFormViewModel"
             Title="Incident Report Form"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="30">
            
            <!-- Header -->
            <Frame BackgroundColor="{DynamicResource PrimaryBrush}" 
                   CornerRadius="10" 
                   Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ“‹ Incident Report Form" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Label Text="Simple form with field transformation demo" 
                           FontSize="14" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Form Fields -->
            <VerticalStackLayout Spacing="20">
                
                <!-- Title -->
                <Frame BackgroundColor="{DynamicResource SecondaryBrush}" 
                       CornerRadius="8" 
                       Padding="20" 
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Incident Title *" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="White"/>
                        <Entry x:Name="TitleEntry" 
                               Text="{Binding FormData.Title}" 
                               Placeholder="Enter incident title (wrong field name)"
                               BackgroundColor="White"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               FontSize="16"/>
                        <Label Text="This will be transformed to 'incident_title'" 
                               FontSize="12" 
                               TextColor="LightGray" 
                               FontStyle="Italic"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Severity -->
                <Frame BackgroundColor="{DynamicResource SecondaryBrush}" 
                       CornerRadius="8" 
                       Padding="20" 
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Severity Level *" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="White"/>
                        <Picker x:Name="SeverityPicker" 
                                ItemsSource="{Binding SeverityOptions}" 
                                SelectedItem="{Binding FormData.Severity}"
                                BackgroundColor="White"
                                TextColor="Black"
                                FontSize="16"/>
                        <Label Text="This will be transformed to 'severity_level' with value mapping" 
                               FontSize="12" 
                               TextColor="LightGray" 
                               FontStyle="Italic"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>

            <!-- Field Transformation Info -->
            <Frame BackgroundColor="{DynamicResource TertiaryBrush}" 
                   CornerRadius="8" 
                   Padding="15" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ”„ Field Transformation Demo" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label Text="â€¢ Title â†’ incident_title" 
                           FontSize="14" 
                           TextColor="White"/>
                    <Label Text="â€¢ Severity â†’ severity_level (with value mapping)" 
                           FontSize="14" 
                           TextColor="White"/>
                    <Label Text="â€¢ Example: 'High' becomes 'sev_high'" 
                           FontSize="14" 
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Validation Errors -->
            <CollectionView ItemsSource="{Binding ValidationErrors}" 
                            IsVisible="{Binding ValidationErrors.Count, Converter={StaticResource IntToBoolConverter}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="Red" 
                               CornerRadius="5" 
                               Padding="10" 
                               Margin="0,2">
                            <Label Text="{Binding}" 
                                   TextColor="White" 
                                   FontSize="14"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Submit Button -->
            <Button x:Name="SubmitButton" 
                    Text="ðŸš€ Submit to Mock API" 
                    Command="{Binding SubmitFormCommand}"
                    IsEnabled="{Binding IsSubmitting, Converter={StaticResource InvertedBoolConverter}}"
                    BackgroundColor="{DynamicResource PrimaryBrush}"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    Padding="15"
                    CornerRadius="10"
                    Margin="0,10,0,10"/>

            <!-- Reset Button -->
            <Button Text="ðŸ”„ Reset Form" 
                    Command="{Binding ResetFormCommand}"
                    BackgroundColor="Gray"
                    TextColor="White"
                    FontSize="16"
                    Padding="15"
                    CornerRadius="10"/>

            <!-- Submit Message -->
            <Frame BackgroundColor="{DynamicResource TertiaryBrush}" 
                   CornerRadius="8" 
                   Padding="15" 
                   IsVisible="{Binding SubmitMessage, Converter={StaticResource StringToBoolConverter}}">
                <Label Text="{Binding SubmitMessage}" 
                       FontSize="14" 
                       TextColor="White" 
                       HorizontalOptions="Center"/>
            </Frame>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsSubmitting}" 
                               IsVisible="{Binding IsSubmitting}"
                               Color="{DynamicResource PrimaryBrush}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>